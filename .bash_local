# ~/.bash_local

# source bash ps1 file
if [ -f ~/.bash_ps1 ];then
    source ~/.bash_ps1
fi

# aliases
alias ll='ls -la'
alias vim=nvim
alias open=xdg-open
alias vpn_on='protonvpn-cli c -f'
alias vpn_off='protonvpn-cli d'
alias ciao='shutdown now'

export VISUAL=nvim
export EDITOR="$VISUAL"

# dotfile git bare repository
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
